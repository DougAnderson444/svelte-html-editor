{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"paths": {
			"$lib":["src/lib"],   
			"$lib/*":["src/lib/*"],
			"@douganderson444/svelte-html-editor":["src/lib/index.js"],
			"@douganderson444/svelte-html-editor/*":["src/lib/*"]
		}
	}
}
